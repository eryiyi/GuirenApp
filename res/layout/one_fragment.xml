<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/mm_main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@color/red"
                    android:layout_height="@dimen/topbar_height">
        <EditText
                android:id="@+id/input_edittext"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_red_two_shape"
                android:layout_toRightOf="@+id/back"
                android:layout_centerInParent="true"
                android:hint="姓名 兴趣爱好"
                android:textColorHint="@color/darkgrey"
                android:singleLine="true"
                android:paddingLeft="8dp"
                android:layout_toLeftOf="@+id/btn_search"
                android:textColor="@color/textColortwo"
                android:textSize="14sp" />
        <ImageView
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:src="@drawable/md_search"
                android:gravity="center"
                android:paddingEnd="12dp"
                android:paddingLeft="12dp"
                android:paddingStart="12dp"
                android:textColor="@color/white"
                android:textSize="12dp"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <ImageView android:layout_width="wrap_content"
                   android:id="@+id/no_record"
                   android:src="@drawable/no_data"
                   android:layout_centerInParent="true"
                   android:layout_height="wrap_content"/>

        <com.Lbins.GuirenApp.library.PullToRefreshListView
                android:id="@+id/lstv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:dividerHeight="8dp"
                android:fadingEdge="none"
                android:layout_marginLeft="15dp"
                android:scrollbars="none"
                android:layout_marginRight="15dp"
                android:fastScrollEnabled="false"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:smoothScrollbar="true"/>
    </RelativeLayout>
</LinearLayout>